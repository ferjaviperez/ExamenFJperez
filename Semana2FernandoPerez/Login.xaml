<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana2FernandoPerez.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="22" CornerRadius="0">
                <Label Text="Cursos Online" HorizontalTextAlignment="Center" TextColor="White" FontSize="18"/>
            </Frame>
            <Frame BackgroundColor="#2196F3" Padding="10" CornerRadius="0">
                <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
            </Frame>


            <Entry x:Name="txtUser" Placeholder="Ingrese el Usuario: "/>
            <Entry x:Name="txtPass" Placeholder="Ingrese la Clave: " IsPassword="True"/>

            <Button x:Name="btnAbrir"  
                Text="Ingresar"  
                Clicked="btnAbrir_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>